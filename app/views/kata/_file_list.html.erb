<ul id="file_menu" class="contextMenu">
  <li class="rename">
    <a href="#rename">Rename</a>
  </li>
  <li class="delete separator">
    <a href="#delete">Delete</a>
  </li>
</ul>

<table>
  <% if !@kata.readonly -%>
    <tbody id="file-list">
  <% else -%>
    <tbody>       
  <% end -%>

    <% @manifest[:visible_files].sort_by{|name| name[0].downcase}.each do |filename,file| -%>
    <tr id="file_row_<%= filename %>">
      <td>             
        <div <% if filename != 'kata.sh' -%>
                id="radioFilename"  
                title="Right-click=rename/delete"
             <% end -%>
             onclick='loadFile("<%=filename-%>")'>
          <input id="radio_<%=filename-%>" 
                 name="radio_filename"
                 type="radio"
                 value="<%=filename-%>"><label><%= filename -%></label>
        </div>
      </td>
    </tr>
    <% end -%>
  </tbody>
</table>

<br/>
<button type="button" onclick="newFile();">new file</button>


